# Environment Configuration for CareChat API Gateway
# FastAPI Gateway Service Environment Variables
# Copy this file to .env and fill in your actual values

# ==============================================
# GENERAL CONFIGURATION
# ==============================================
APP_NAME=CareChat API Gateway
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# ==============================================
# API CONFIGURATION
# ==============================================
API_V1_STR=/api/v1
HOST=0.0.0.0
PORT=8000

# ==============================================
# SECURITY (REQUIRED)
# ==============================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=11520
REFRESH_TOKEN_EXPIRE_MINUTES=43200
ALGORITHM=HS256

# ==============================================
# CORS CONFIGURATION
# ==============================================
# Comma-separated list of allowed origins
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003

# ==============================================
# DATABASE CONFIGURATION (REQUIRED)
# ==============================================

# MongoDB Configuration (Primary Database)
MONGODB_URL=mongodb://username:password@host:port/database
MONGODB_DATABASE=carechat_patient_system

# PostgreSQL Configuration (for Track3)
TRACK3_DATABASE_URL=postgresql://username:password@localhost:5432/track3_db

# ==============================================
# MICROSERVICE URLS (REQUIRED)
# ==============================================
TRACK1_SERVICE_URL=http://localhost:3001
TRACK2_SERVICE_URL=http://localhost:3002
TRACK3_SERVICE_URL=http://localhost:3003

# ==============================================
# REDIS CONFIGURATION (REQUIRED)
# ==============================================
REDIS_URL=redis://localhost:6379

# ==============================================
# AI/LLM CONFIGURATION (OPTIONAL)
# ==============================================
GEMINI_API_KEY=your_gemini_api_key
GROQ_API_KEY=your_groq_api_key
OPENAI_API_KEY=your_openai_api_key
DEFAULT_LLM_PROVIDER=gemini

# ==============================================
# NOTIFICATION SERVICES (OPTIONAL)
# ==============================================

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_TLS=true

# ==============================================
# RATE LIMITING (OPTIONAL)
# ==============================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# ==============================================
# LOGGING (OPTIONAL)
# ==============================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/carechat_api.log

# ==============================================
# LEGACY BACKEND URLS (OPTIONAL - for compatibility)
# ==============================================
# These will default to the corresponding SERVICE_URL if not set
TRACK1_BACKEND_URL=http://localhost:3001
TRACK2_BACKEND_URL=http://localhost:3002
TRACK3_BACKEND_URL=http://localhost:3003

